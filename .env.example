# Environment
NODE_ENV=development

# Optional database (unused unless you enable direct Postgres access)
# DATABASE_URL=postgresql://report_user:report_pass@localhost:5432/report_generator?schema=public
# DIRECT_DATABASE_URL=postgresql://report_user:report_pass@localhost:5432/report_generator?schema=public

# Optional Redis (unused unless you enable Redis-backed jobs)
# REDIS_URL=redis://localhost:6379

# Optional S3/Storage (unused unless you enable S3 exports)
# S3_ENDPOINT=http://localhost:9000
# S3_ACCESS_KEY=minio
# S3_SECRET_KEY=minio123
# S3_BUCKET=report-generator

# Logging
LOG_LEVEL=info

# Feature Flags (comma-separated key=value pairs)
# FEATURE_FLAGS=enable_verification=true,enable_reviewer=false

# App Name
NEXT_PUBLIC_APP_NAME=Report Generator

# OpenAI API (for reviewer functionality)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_REVIEW_MODEL=gpt-4o-mini
OPENAI_WRITE_MODEL=gpt-4o-mini
OPENAI_VERIFY_MODEL=gpt-4o-mini

# Tavily API (for web search)
TAVILY_API_KEY=your_tavily_api_key_here

# SerpAPI (alternative web search)
SERPAPI_API_KEY=your_serpapi_key_here

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_EXPORTS_BUCKET=exports
